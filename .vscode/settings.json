{
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "better-comments.tags": [
    {
      "tag": "todo",
      "color": "#FFA500", // Orange
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#333333" // Dark gray
    },
    {
      "tag": "fixme",
      "color": "#FF0000", // Red
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "#1A1A1A" // Very dark gray
    },
    {
      "tag": "note",
      "color": "#00FF00", // Green
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#222222" // Very dark gray
    },
    {
      "tag": "hack",
      "color": "#FF00FF", // Magenta
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "#333333" // Dark gray
    },
    {
      "tag": "review",
      "color": "#0000FF", // Blue
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#1A1A1A" // Very dark gray
    },
    {
      "tag": "warning",
      "color": "#FF0000", // Red
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#E57373" // Light red for contrast
    }
  ],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.format.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "css.validate": false,
  "scss.validate": false,
  "stylelint.validate": ["css", "scss"]
}
